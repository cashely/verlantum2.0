<!DOCTYPE html>
<html>
  <head>
    <title>云量科技</title>
    <script src="https://cdn.bootcss.com/jquery/1.8.0/jquery.min.js"></script>
  </head>
  <body>
    <script>
      const ua = window.navigator.userAgent.toLowerCase();
    	if(ua.match(/Alipay/i)=="alipay"){
          document.write('支付宝')
    	    location.href = '/alipay?aid=<%= aid%>&price=<%= price%>&ratio<%= ratio%>';
    	}else if(ua.match(/MicroMessenger/i)=="micromessenger"){
          document.write('微信')
    	    location.href = '/wxpay?aid=<%= aid%>&price=<%= price%>&ratio<%= ratio%>';
    	}else{
    		document.write('无法识别的设备')
    	}
    </script>
  </body>
</html>
