      function getWxCode() {
        window.location.href=`/wxcode/get?uri=${location.href}`
      }
      // 把url的search转换为object
      function deSearch () {
        const search = window.location.search.replace('?', '');
        return search.split('&').map(v => v.split('=')).reduce((a, b) => ({ ...a, [b[0]]: b[1] }), {});
      }
      function getWxInfo() {
